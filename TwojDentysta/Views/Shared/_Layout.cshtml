<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Twój Dentysta</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #MyMenu {
            background-color: #3385ff;
            border-color: #1a75ff;
        }
        #MyMenu ul li a {
            color: #ffffff;
        }
        #MyMenu ul li:hover {
            background-color: #005ce6;
        }
    </style>
</head>:
<body>
    <nav class="navbar navbar-default navbar-fixed-top" id="MyMenu">
        <div class="container">
            <!--Navbar Header Start Here-->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#MainNavBar"
                        style="background-color: #005ce6">
                    <span class="icon-bar" style="background-color:#ffffff"></span>
                    <span class="icon-bar" style="background-color:#ffffff"></span>
                    <span class="icon-bar" style="background-color:#ffffff"></span>
                </button>
                <a class="navbar-brand" style="color: #ffffff" href="/">Twój Dentysta</a>
            </div>
            <!--Navbar Header End Here-->
            <!--Menu Start Here-->
            <div class="collapse navbar-collapse" id="MainNavBar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="https://localhost:44367/modemosite1/?ssoaction=login">Zaloguj</a></li>
                </ul>
            </div>
            <!--Menu End Here-->
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container text-center">
                <p>&copy; @DateTime.Now.Year - Twój Dentysta</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

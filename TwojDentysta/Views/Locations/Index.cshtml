@model IEnumerable<TwojDentysta.Models.Location>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    @{
        int col1 = 0;
        int col2 = 0;
        <div class="row">
            <div class="col-md-6 text-center">
                @foreach (var item in Model)
                {
                    if (@col1 % 2 == 0)
                    {
                        <h2>@Html.DisplayFor(modelItem => item.Name)</h2> <br />
                        <img src="~/Images/@(item.ID).jpg" class="img-rounded img-thumbnail" alt="img-thumbnail" /> <br /> <br />
                        @Html.ActionLink("Informacje kontaktowe", "Details", new { id = item.ID }) <br /> <br />
                        <a href='@Url.Action("Index", "Appointments")' class="btn btn-primary">Umów swoją wizytę</a>
                    }
                    col1 = col1 + 1;
                }
            </div>
            <div class="col-md-6 text-center">
                @foreach (var item in Model)
                {
                    if (@col2 % 2 != 0)
                    {
                        <h2>@Html.DisplayFor(modelItem => item.Name)</h2> <br />
                        <img src="~/Images/@(item.ID).jpg" class="img-rounded img-thumbnail" alt="img-thumbnail" /> <br /> <br />
                        @Html.ActionLink("Informacje kontaktowe", "Details", new { id = item.ID }) <br /> <br />
                        <a href='@Url.Action("Index", "Appointments")' class="btn btn-primary">Umów swoją wizytę</a>

                    }
                    col2 = col2 + 1;
                }
            </div>
        </div>
    }
</div>


